<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_land_small"
    android:paddingLeft="@dimen/activity_horizontal_margin_land_small"
    android:paddingRight="@dimen/activity_horizontal_margin_land_small"
    android:paddingTop="@dimen/activity_vertical_margin_land_small"
    tools:context="app.lereiver.mike.drums.MainActivity"
    android:orientation="horizontal"
    android:background="@color/colorBackground"
    android:layout_centerHorizontal="true">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo2"
            android:textSize="@dimen/header_font_size_small"
            android:textColor="@color/colorAccent"
            android:layout_gravity="start" />

        <ImageView
            android:onClick="showToast"
            android:src="@drawable/set"
            android:id="@+id/display_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right">

        <Button
            android:textSize="@dimen/button_font_size_land_small"
            android:onClick="setDrum"
            android:id="@+id/crash_button"
            android:text="@string/crash_small"
            android:layout_width="140dp"
            android:layout_weight="3"
            android:layout_height="80dp"/>

        <Button
            android:textSize="@dimen/button_font_size_land_small"
            android:onClick="setDrum"
            android:id="@+id/hihat_open_button"
            android:text="@string/hihat_open_small"
            android:layout_width="140dp"
            android:layout_weight="3"
            android:layout_height="80dp" />

        <Button
            android:textSize="@dimen/button_font_size_land_small"
            android:onClick="setDrum"
            android:id="@+id/hihat_closed_button"
            android:text="@string/hihat_closed_small"
            android:layout_width="140dp"
            android:layout_weight="3"
            android:layout_height="80dp"/>

        <Button
            android:textSize="@dimen/button_font_size_land_small"
            android:onClick="setDrum"
            android:id="@+id/tom_button"
            android:text="@string/tom_small"
            android:layout_width="140dp"
            android:layout_weight="3"
            android:layout_height="80dp" />

        <Button
            android:textSize="@dimen/button_font_size_land_small"
            android:onClick="setDrum"
            android:id="@+id/snare_button"
            android:text="@string/snare_small"
            android:layout_width="140dp"
            android:layout_weight="3"
            android:layout_height="80dp" />

        <Button
            android:textSize="@dimen/button_font_size_land_small"
            android:onClick="setDrum"
            android:id="@+id/kick_button"
            android:text="@string/kick_small"
            android:layout_width="140dp"
            android:layout_weight="3"
            android:layout_height="80dp" />

    </LinearLayout>




</LinearLayout>
