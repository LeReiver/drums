<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_horizontal_margin_small"
    android:paddingLeft="@dimen/activity_vertical_margin_small"
    android:paddingRight="@dimen/activity_vertical_margin_small"
    android:paddingTop="@dimen/activity_horizontal_margin_small"
    tools:context="app.lereiver.mike.drums.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo2"
        android:textSize="@dimen/header_font_size_small"
        android:textColor="@color/colorAccent"
        android:layout_gravity="start" />

    <ImageView
        android:onClick="showToast"
        android:src="@drawable/set"
        android:id="@+id/display_image"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:textSize="@dimen/button_font_size_small"
            android:onClick="setDrum"
            android:id="@+id/hihat_closed_button"
            android:text="@string/hihat_closed_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"/>

        <Button
            android:textSize="@dimen/button_font_size_small"
            android:onClick="setDrum"
            android:id="@+id/crash_button"
            android:text="@string/crash_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent" />

        <Button
            android:textSize="@dimen/button_font_size_small"
            android:onClick="setDrum"
            android:id="@+id/hihat_open_button"
            android:text="@string/hihat_open_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:textSize="@dimen/button_font_size_small"
            android:onClick="setDrum"
            android:id="@+id/snare_button"
            android:text="@string/snare_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent" />

        <Button
            android:textSize="@dimen/button_font_size_small"
            android:onClick="setDrum"
            android:id="@+id/tom_button"
            android:text="@string/tom_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent" />

        <Button
            android:textSize="@dimen/button_font_size_small"
            android:onClick="setDrum"
            android:id="@+id/kick_button"
            android:text="@string/kick_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent" />


    </LinearLayout>





</LinearLayout>
